# =========================================
# Server Configuration
# =========================================
PORT=3002
NODE_ENV=development

# =========================================
# Database (PostgreSQL)
# =========================================
DATABASE_URL=postgresql://user:password@localhost:5432/coursesignal

# =========================================
# Redis (Optional - used for caching)
# =========================================
# For local development: redis://localhost:6379
# For production (Upstash): redis://:password@endpoint:port
REDIS_URL=redis://localhost:6379

# =========================================
# Security Secrets
# =========================================
# JWT Secret (generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-secret-key-here

# Encryption Key for OAuth tokens - MUST be 32 characters
# Generate: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef

# =========================================
# Email (SendGrid)
# =========================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@coursesignal.com

# =========================================
# Stripe (Payment Processing)
# =========================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_...

# =========================================
# Kajabi Integration (OAuth)
# =========================================
KAJABI_CLIENT_ID=your-kajabi-client-id
KAJABI_CLIENT_SECRET=your-kajabi-client-secret
KAJABI_REDIRECT_URI=http://localhost:3002/api/kajabi/callback
KAJABI_WEBHOOK_SECRET=your-kajabi-webhook-secret

# =========================================
# Teachable Integration (OAuth)
# =========================================
TEACHABLE_CLIENT_ID=your-teachable-client-id
TEACHABLE_CLIENT_SECRET=your-teachable-client-secret
TEACHABLE_REDIRECT_URI=http://localhost:3002/api/teachable/callback
TEACHABLE_WEBHOOK_SECRET=your-teachable-webhook-secret

# =========================================
# Skool Integration (API Key)
# =========================================
SKOOL_API_BASE=https://api.skoolapi.com
SKOOL_WEBHOOK_SECRET=your-skool-webhook-secret

# =========================================
# AI Recommendations (OpenAI)
# =========================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key

# =========================================
# Frontend URL
# =========================================
# Local: http://localhost:5173
# Production: https://your-domain.com
APP_URL=http://localhost:5173
